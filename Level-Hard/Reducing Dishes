class Solution {
    public int maxSatisfaction(int[] satisfaction) {
        Arrays.sort(satisfaction);        
        int postSum = 0, cur = 0, res = 0;
        
        for (int i = satisfaction.length - 1; i >= 0; i--)
        {
            postSum += satisfaction[i];
            cur += postSum;
            
            if (cur <= 0) break;
            
            res = Math.max(res, cur);
        }
        return res; 
    }
}
