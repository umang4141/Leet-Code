class Solution {
    public boolean isPalindrome(int x) {
        int r,sum=0;
        int num=x;
        while(x>0)
        {
            r=x%10;
            sum=(sum*10)+r;
            x=x/10;
        }
        if(sum == num)
        {
            return true;
        }
        else
        
            return false;
    
    }
}
